@model _2001216310_NguyenThanhVi.ViewModel.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutPageNoneSection.cshtml";
}

<div style="margin:50px;margin-left:750px">
    <h2 style="color:red;">ĐĂNG NHẬP</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {

        <table class="table" style="width:30%;">
            <tr>
                <td>
                    @Html.LabelFor(e => e.UserName, "Tên đăng nhập")
                    @Html.TextBoxFor(e => e.UserName, new { @class = "form-control", style = "width:70%" })
                    @Html.ValidationMessageFor(e => e.UserName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(e => e.Password, "Mật khẩu")
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "width:70%" } })
                    @Html.ValidationMessageFor(e => e.Password)
                </td>
            </tr>
        </table>
        @Html.ValidationSummary()
        if (ViewBag.error != null)
        {
            <span class="badge badge-danger">@ViewBag.error</span>
        }
        <a href="/Product/MainOfProduct?sc=false" class="btn btn-secondary">Thoát</a>
        <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />
    }
</div>
