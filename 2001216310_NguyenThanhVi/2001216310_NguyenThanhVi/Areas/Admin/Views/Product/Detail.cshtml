@model _2001216310_NguyenThanhVi.Models.Product
@{
    ViewBag.Title = "Thông tin";
}
@section Side{
    <div class="col-md-5">
        <span style="padding-top: 100px; padding-bottom: 100px; padding-left: 10px;"><b>LOẠI NƯỚC NGỌT</b></span>
        <div class="text-success" style="width:60%">
            <hr>
        </div>
        <div class="list-group list-group-flush">
            @foreach (_2001216310_NguyenThanhVi.Models.Brand item in ViewBag.brand)
            {
                <a class="list-group-item" href="/Product/MainOfProduct?sc=false&brandsearch=@item.Id">@item.Name</a>
            }
        </div>
    </div>
    <div class="col-md-5" style="margin-top: 40px;">
        <span style="padding-top: 100px; padding-bottom: 100px; padding-left: 10px;"><b>CHỌN THEO GIÁ</b></span>
        <div class="text-success" style="width:60%">
            <hr>
        </div>
        <div class="list-group list-group-flush">
            <a class="list-group-item" href="/Product/MainOfProduct?sc=false&price=L100">100.000<u>đ</u> trở xuống</a>
            <a class="list-group-item" href="/Product/MainOfProduct?sc=false&price=100200">100.000<u>đ</u> - 200.000<u>đ</u></a>
            <a class="list-group-item" href="/Product/MainOfProduct?sc=false&price=200500">200.000<u>đ</u> - 500.000<u>đ</u></a>
            <a class="list-group-item" href="/Product/MainOfProduct?sc=false&price=H500">Trên 500.000<u>đ</u></a>
        </div>
    </div>
}
<div style="margin-right: 400px; float: left">
    <h2>@Model.Name</h2>
    <div>
        <div style="float:left">
            <img src="/Img/@Model.Img" style="width:400px;height:500px" />
        </div>
        <div style="float:right; margin-left:50px;">
            <p style="font-size:50px">Mã SP:<span style="color:red;">@Model.Id</span></p>
            <p style="font-size:30px">Giá: <span style="color:red;">@Model.Price <u>đ</u></span></p>
            <div style="border: solid 0.01mm lightgray;width:385px;">
                <div style="color:red;">
                    <ul>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            string s = Model.Description;
                            int dem = 0;
                            int demc = 0;
                            char c = s[dem];
                            int tong = 0;
                            if (s != string.Empty)
                            {
                                foreach (char m in s)
                                {
                                    if (m == '/')
                                    {
                                        tong++;
                                    }
                                }
                                while (dem < tong)
                                {
                                    <li>
                                        @{
                                            for (int i = demc; i < s.Length; i++)
                                            {
                                                if (s[i] == '/')
                                                {
                                                    demc++;
                                                    break;
                                                }
                                                Write(s[i]);
                                                demc++;
                                            }
                                        }
                                    </li>
                                    dem++;
                                }
                            }
                        }
                        else
                        {
                            <li>Chưa có mô tả</li>
                        }
                    </ul>
                </div>
            </div>
            <br />
            @if (Model.Storages.Amount != 0)
            {
                <p>Số lượng: <input type="number" value="@Model.Storages.Amount" disabled style="border:none;color:red;" /></p>
            }
            else
            {
                <div>
                    SẢN PHẨM HẾT HÀNG
                </div>
            }
            <div>
                <a href="/Admin/Product/Fix/@Model.Id" class="btn btn-primary" style="width: 80px; margin: 5px;margin-left:10px; float:left ; display: inline;">Sửa</a>
                <a href="/Admin/Product/Delete/@Model.Id" class="btn btn-danger" style="width:70px;margin:5px; float: right; display:inline;">Xóa</a>

                @*<div style="float:left">
                    <table>
                        <tr>
                            <td rowspan="2" style="border:none"><input type="text" id="KQ" value="1" disabled style="border:none;width:20px;height:20px;background-color:white;" /></td>
                            <td><input type="button" value="+" id="Tang" style="width:30px;height:30px;" onclick="clickTang()" /></td>
                            <td rowspan="2"><a href="#" class="btn btn-primary" style="width:100px;">Mua ngay</a></td>
                        </tr>
                        <tr>
                            <td>
                                <input type="button" value="-" id="Giam" style="width:30px;height:30px;" onclick="clickGiam()" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>*@
            </div>
            <br />
        </div>
    </div>
</div>
    <script>

        function clickTang() {
            document.getElementById("KQ").value++;
        }
        function clickGiam() {
            if (document.getElementById("KQ").value > 1)
                document.getElementById("KQ").value--;
        }
    </script>
